			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/x-www-form-urlencoded"
					}
				],
				"body": {
					"mode": "urlencoded",
					"urlencoded": [
						{
							"key": "action",
							"value": "tp_capture_screenshot",
							"type": "text"
						},
						{
							"key": "nonce",
							"value": "{{nonce}}",
							"type": "text"
						},
						{
							"key": "url",
							"value": "https://www.google.com",
							"type": "text"
						}
					]
				},
				"url": {
					"raw": "{{base_url}}/wp-admin/admin-ajax.php",
					"host": ["{{base_url}}"],
					"path": ["wp-admin", "admin-ajax.php"]
				},
				"description": "Capture screenshot of Google homepage"
			},
			"response": []
		},
		{
